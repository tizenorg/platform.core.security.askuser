[Unit]
Description=Ask user agent

[Service]
ExecStart=/usr/bin/askuser

Type=notify

KillMode=process
TimeoutStopSec=3
Restart=always

UMask=0000
NoNewPrivileges=true

EnvironmentFile=-/etc/sysconfig/enlightenment
# Makes popup bigger
Environment="ELM_SCALE=2.0"
Environment="ASKUSER_LOG_LEVEL=LOG_DEBUG"

[Install]
WantedBy=multi-user.target
